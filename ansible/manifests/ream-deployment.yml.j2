apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ node_name }}
  namespace: {{ k8s_namespace }}
  labels:
    app: {{ node_name }}
    managed-by: ansible
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ node_name }}
  template:
    metadata:
      labels:
        app: {{ node_name }}
    spec:
      containers:
      - name: ream
        image: {{ ream_docker_image }}
        imagePullPolicy: IfNotPresent
        args:
          - --data-dir /data
          - lean_node
          - --network /config/config.yaml
          - --validator-registry-path /config/validators.yaml
          - --bootnodes /config/nodes.yaml
          - --node-id {{ node_name }}
          - --node-key /config/{{ node_name }}.key
          - --socket-port {{ quic_port }}
          - --metrics-port {{ metrics_port }}
        ports:
        - name: metrics
          containerPort: {{ metrics_port }}
        - name: quic
          containerPort: {{ quic_port }}
        volumeMounts:
        - name: config
          mountPath: /config
          readOnly: true
        - name: data
          mountPath: /data
        resources:
          requests:
            cpu: {{ k8s_cpu_request }}
            memory: {{ k8s_memory_request }}
          limits:
            cpu: {{ k8s_cpu_limit }}
            memory: {{ k8s_memory_limit }}
      volumes:
      - name: config
        hostPath:
          path: {{ genesis_dir }}
          type: Directory
      - name: data
        persistentVolumeClaim:
          claimName: {{ node_name }}-data
---
apiVersion: v1
kind: Service
metadata:
  name: {{ node_name }}-metrics
  namespace: {{ k8s_namespace }}
  labels:
    app: {{ node_name }}
    managed-by: ansible
spec:
  type: NodePort
  selector:
    app: {{ node_name }}
  ports:
  - name: metrics
    port: {{ metrics_port }}
    targetPort: metrics
---
apiVersion: v1
kind: Service
metadata:
  name: {{ node_name }}-quic
  namespace: {{ k8s_namespace }}
  labels:
    app: {{ node_name }}
    managed-by: ansible
spec:
  type: ClusterIP
  selector:
    app: {{ node_name }}
  ports:
  - name: quic
    port: {{ quic_port }}
    targetPort: quic

